<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="212dp"
        android:layout_height="51dp"

        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/contrail_one"
        android:text="Input Name:"
        android:textColor="#EC0909"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="212dp"
        android:layout_height="51dp"

        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/contrail_one"
        android:text="Select Difficulty:"
        android:textColor="#EC0909"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="171dp"
        android:layout_height="56dp"

        android:layout_marginStart="28dp"
        android:layout_marginTop="84dp"
        android:fontFamily="@font/contrail_one"
        android:text="Select Character:"
        android:textColor="#EC0909"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/playerName"
        android:layout_width="328dp"
        android:layout_height="51dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="78dp"
        android:background="@android:color/darker_gray"
        android:gravity="center"
        android:hint="NAME"
        android:inputType="text"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="#2196F3"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button8"
        android:layout_width="111dp"
        android:layout_height="53dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#09EC20"
        android:text="LET'S GO!"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="314dp"
        android:layout_height="53dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="92dp"
        android:orientation="horizontal"
        android:rotation="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerName">


        <RadioButton
            android:id="@+id/radia_id1"
            android:layout_width="100dp"
            android:layout_height="47dp"
            android:buttonTint="#DC1B1B"
            android:text="Easy"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="334dp"
            tools:layout_editor_absoluteY="88dp" />

        <RadioButton
            android:id="@+id/radia_id2"
            android:layout_width="101dp"
            android:layout_height="42dp"
            android:buttonTint="#DC1B1B"
            android:text="Medium"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="464dp"
            tools:layout_editor_absoluteY="92dp" />

        <RadioButton
            android:id="@+id/radia_id3"
            android:layout_width="100dp"
            android:layout_height="43dp"
            android:buttonTint="#DC1B1B"
            android:text="Hard"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="584dp"
            tools:layout_editor_absoluteY="92dp" />

    </RadioGroup>

    <androidx.constraintlayout.widget.Group
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />


    <RadioGroup
        android:id="@+id/charGroup"
        android:layout_width="344dp"
        android:layout_height="59dp"
        android:layout_marginStart="272dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/charOne"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:text="Plague Doctor"
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/charTwo"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:text="Dinosaur"
            android:textColor="#FFFFFF"
            tools:layout_editor_absoluteX="384dp"
            tools:layout_editor_absoluteY="331dp" />

        <RadioButton
            android:id="@+id/charThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Knight"
            android:textColor="#FFFFFF"
            tools:layout_editor_absoluteX="485dp"
            tools:layout_editor_absoluteY="333dp" />
    </RadioGroup>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="386dp"
        android:layout_height="147dp"
        android:layout_marginEnd="76dp"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"
        app:layout_constraintVertical_bias="0.392"
        app:srcCompat="@drawable/sprite1" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="150dp"
        android:layout_height="145dp"
        android:layout_marginTop="7dp"
        app:layout_constraintBottom_toTopOf="@+id/charGroup"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/sprite3" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="225dp"
        android:layout_height="146dp"
        app:layout_constraintBottom_toTopOf="@+id/charGroup"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.307"
        app:layout_constraintStart_toEndOf="@+id/imageView8"
        app:srcCompat="@drawable/sprite2" />


</androidx.constraintlayout.widget.ConstraintLayout>